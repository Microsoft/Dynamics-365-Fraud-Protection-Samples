@model Contoso.FraudProtection.Web.ViewModels.FraudProtectionIOModel

@if (Model != null)
{
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <h3>Correlation ID: <small>@Model.CorrelationId</small></h3>
                </section>
            </div>
        </div>
    </div>
    @foreach (var io in Model.RequestResponsePairs)
    {
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        @if (io.Name != null) { <h3>@io.Name</h3> }
                        <div class="col-md-6">
                            <h4>Fraud Protection Request</h4>
                            <pre>@io.Request</pre>
                        </div>
                        <div class="col-md-6">
                            <h4>Fraud Protection Response</h4>
                            <pre>@io.Response</pre>
                        </div>
                    </section>
                </div>
                @if (@io.CallTime > 0)
                {
                    <div class="row">
                        <h5>The above call took @io.CallTime ms</h5>
                    </div>
                }
            </div>
        </div>
    }
}
